extends ../formularios

block contenido2

    .container.p-4
        .row
            if (categorias)
                each categoria in categorias
                    .col-md-3
                    .card.text-center
                        .card-body
                        a(target='_blank')
                            h3.card-title.text-uppercase #{categoria.nombre}
                        p.m-2 #{categoria.descripcion}
                          
                        a.btn.btn-danger(href=`eliminarCategoria/${categoria.idCategoria}`)
                            | Eliminar Categoria
                        a.btn.btn-secondary(href=`editarCategoria/${categoria.idCategoria}`)
                            | Editar Categoria
            else
                .col-md-4.mx-auto
                    .card.card-body.text-center
                        p No hay categorias para mostrar.
                        a(href='/categoria/crearCategoria') Crear una!
            
