  body
    .limiter
      .container-login100(style="background-image: url('images/bg_1.jpg');")
        .wrap-login100.p-l-55.p-r-55.p-t-65.p-b-54
          form.login100-form.validate-form(action='/user/crear_cuenta', method='POST')
            span.login100-form-title.p-b-49
              | Regístrate
            .wrap-input100.validate-input.m-b-23(data-validate='Debe ingresar su correo electrónico')
