    .limiter

      .container-login100(style="background-image: url('/register/images/bg_1.jpg');")

        .wrap-login100.p-l-55.p-r-55.p-t-65.p-b-54
          form.login100-form.validate-form(action='/user/crear_cuenta', method='POST')
            span.login100-form-title.p-b-49
              | Regístrate
            .wrap-input100.validate-input.m-b-23(data-validate='Debe ingresar su correo electrónico')
              span.label-input100 Correo
              input.input100(type='text', name='email', placeholder='Goku@gmail.com')
              span.focus-input100(data-symbol='')

            //- .wrap-input100.validate-input.m-b-23(data-validate='Debe ingresar su usuario')
            //-   span.label-input100 Usuario
            //-   input.input100(type='text', name='username', placeholder='Goku98')
            //-   span.focus-input100(data-symbol='')

            .wrap-input100.validate-input.m-b-23(data-validate='Debe ingresar su usuario')
              span.label-input100 Contraseña
              input.input100(type='password', name='password', placeholder='*****')
              span.focus-input100(data-symbol='')

            //- .wrap-input100.validate-input.m-b-23(data-validate='Debe ingresar su usuario')
            //-   span.label-input100 Confirmar contraseña
            //-   input.input100(type='password', name='password2', placeholder='*****')
            //-   span.focus-input100(data-symbol='')
            
            .wrap-input100.validate-input.m-b-23(data-validate='Debe ingresar su Nombre')
              span.label-input100 Nombre
              input.input100(type='text', name='Nombre', placeholder='Luffy')
              span.focus-input100(data-symbol='')

            .wrap-input100.validate-input.m-b-23(data-validate='Debe ingresar su Apellido')
              span.label-input100 Apellido
              input.input100(type='text', name='Apellido', placeholder='Monkey D.')
              span.focus-input100(data-symbol='')

            .wrap-input100.validate-input.m-b-23(data-validate='Debe ingresar su Telefono')
              span.label-input100 Telefono
              input.input100(type='text', name='Telefono', placeholder='9999-9999')
              span.focus-input100(data-symbol='')

            .wrap-input100.validate-input.m-b-23(data-validate='Debe ingresar su Direccion')
              span.label-input100 Direccion
              input.input100(type='text', name='Direccion', placeholder='P. Sherman, calle Wallaby, 42, Sydney')
              span.focus-input100(data-symbol='')

            .container-login100-form-btn
              .wrap-login100-form-btn
                .login100-form-bgbtn
                button.login100-form-btn(type="submit", value="Submit")
                  | Registro
              .txt1.text-center.p-t-54.p-b-20
                span
                  | O ingresa con tus redes sociales
            .flex-c-m
              .fb-login-button(action="/user/auth/facebook" method="GET" data-width='260' data-size='large' data-button-type='continue_with' data-auto-logout-link='false' data-use-continue-as='true')
            .flex-col-c.p-t-155
              span.txt1.p-b-17
                | ¿Ya estas registrado?
              a.txt2(href='/user/iniciar_sesion' id="hola")
                | Inicia sesión
