include ./header


// Title Page
section.bg-title-page.p-t-40.p-b-50.flex-col-c-m(style='background-image: url(images/heading-pages-01.jpg);')
  h2.l-text2.t-center
    | Carrito
// Cart
section.cart.bgwhite.p-t-70.p-b-100
  .container
    // Cart item
    .container-table-cart.pos-relative
      .wrap-table-shopping-cart.bgwhite
        table.table-shopping-cart
          tr.table-head
            th.column-1
            th.column-2 Producto
            th.column-3 Precio
            th.column-4.p-l-70 Cantidad
            th.column-5 Total
          
          if products
            each producto in products
              tr.table-row
              td.column-1
                a(href=`/carrito/quitar_producto/${producto.item.idInventario}`)
                  .cart-img-product.b-rad-4.o-f-hidden
                    img( src='/img/vino.png' alt='IMG-PRODUCT')
              td.column-2 #{producto.item.nombre}
              td.column-3 L #{producto.item.precioVenta}
              td.column-4
                .flex-w.bo5.of-hidden.w-size17
                  button.btn-num-product-down.color1.flex-c-m.size7.bg8.eff2
                    a(href=`/carrito/quitar_uno/${producto.item.idInventario}`)
                      i.fs-12.fa.fa-minus(aria-hidden='true')
                  input.size8.m-text18.t-center.num-product(type='number' name='num-product1' value=`${producto.qty}`)
                  button.btn-num-product-up.color1.flex-c-m.size7.bg8.eff2
                    a(href=`/carrito/anadir_carrito/${producto.item.idInventario}`)
                      i.fs-12.fa.fa-plus(aria-hidden='true')
              td.column-5 L #{producto.price}
          else

          
        // Button
        button.flex-c-m.sizefull.bg1.bo-rad-23.hov1.s-text1.trans-0-4
          | Actualizar carrito
    // Total
    .bo9.w-size18.p-l-40.p-r-40.p-t-30.p-b-38.m-t-30.m-r-0.m-l-auto.p-lr-15-sm
      h5.m-text20.p-b-24
        | Total de la compra
      // 
      .flex-w.flex-sb-m.p-b-12
        span.s-text18.w-size19.w-full-sm
          | Subtotal:
        span.m-text21.w-size20.w-full-sm
          | L #{subtotal}
      .flex-w.flex-sb-m.p-b-12
        span.s-text18.w-size19.w-full-sm
